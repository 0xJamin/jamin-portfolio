---
import Layout from "../layouts/Layout.astro";
import data from "../data/blog.json";
---

<Layout title="Blogs posts and articles written by Trust Jamin">
  <section>
    <div class="container">
      <div class="content">
        <h1>Some content I've written in the past.</h1>
        {
          data.map((post) => (
            <a class="post" href={post.link} target="_blank" rel="noopener noreferrer">
              <h2>{post.title} </h2>
              <p>{post.description}</p>
              <p class="small">{post.date}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  .post {
    display: block;
    padding: 1rem 2rem;
    margin: 1rem 0;
    border: none;
  }
a.post:hover {
  background-color: #fff;
  border: none;
  border-radius: 5px;
  box-shadow: 0px 10px 15px -22px rgba(0,0,0,0.1);
}
  h2 {
    font-size: 1.7rem;
  }
  p {
    padding: 0.2rem 0;
    line-height: 1.8;
  }
  .small {
    font-size: 1.4rem;
  }

</style>
